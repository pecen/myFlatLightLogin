<UserControl
    x:Class="myFlatLightLogin.UI.Wpf.MVVM.View.RoleManagement"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:myFlatLightLogin.UI.Wpf.MVVM.ViewModel"
    d:DataContext="{d:DesignInstance Type=vm:RoleManagementViewModel}"
    mc:Ignorable="d">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </UserControl.Resources>

    <Border
        Padding="20"
        Background="White"
        CornerRadius="10">
        <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Header  -->
                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <StackPanel HorizontalAlignment="Left">
                        <TextBlock
                            FontSize="24"
                            FontWeight="Bold"
                            Foreground="#5a5a5a"
                            Text="Role Management" />
                        <TextBlock
                            Margin="0,5,0,0"
                            FontSize="12"
                            Foreground="#7a7a7a"
                            Text="Manage application roles (Firebase)" />
                    </StackPanel>
                    <Button
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Command="{Binding BackCommand}"
                        Content="â† Back to Home"
                        Style="{StaticResource mainButton}" />
                </Grid>

                <!--  Action Buttons  -->
                <StackPanel
                    Grid.Row="1"
                    Margin="0,0,0,10"
                    Orientation="Horizontal">
                    <Button
                        Command="{Binding LoadRolesCommand}"
                        Content="Refresh Roles"
                        Style="{StaticResource mainButton}" />
                    <Button
                        Margin="10,0,0,0"
                        Command="{Binding SeedDefaultRolesCommand}"
                        Content="Seed Default Roles"
                        Style="{StaticResource mainButtonPrimary}" />
                    <!--  Debug: Show role count  -->
                    <TextBlock
                        Margin="20,0,0,0"
                        VerticalAlignment="Center"
                        FontWeight="Bold"
                        Foreground="Blue"
                        Text="{Binding Roles.Count, StringFormat='Roles in collection: {0}'}" />
                </StackPanel>

                <!--  Roles List  -->
                <GroupBox
                    Grid.Row="2"
                    MinHeight="300"
                    Margin="0,10,0,10"
                    Header="Existing Roles">
                    <DataGrid
                        AlternatingRowBackground="#f5f5f5"
                        AutoGenerateColumns="False"
                        Background="White"
                        BorderBrush="#cccccc"
                        BorderThickness="1"
                        CanUserAddRows="False"
                        FontSize="14"
                        Foreground="#000000"
                        GridLinesVisibility="All"
                        HeadersVisibility="Column"
                        IsReadOnly="True"
                        ItemsSource="{Binding Roles}"
                        RowBackground="White"
                        RowHeight="40"
                        SelectedItem="{Binding SelectedRole}">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#e0e0e0" />
                                <Setter Property="Foreground" Value="#000000" />
                                <Setter Property="FontWeight" Value="Bold" />
                                <Setter Property="Padding" Value="10,5" />
                                <Setter Property="BorderBrush" Value="#cccccc" />
                                <Setter Property="BorderThickness" Value="0,0,1,1" />
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Padding" Value="10,5" />
                                <Setter Property="BorderBrush" Value="#e0e0e0" />
                                <Setter Property="BorderThickness" Value="0,0,1,1" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                            </Style>
                        </DataGrid.CellStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="80"
                                Binding="{Binding Id}"
                                Header="ID">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#000000" />
                                        <Setter Property="FontSize" Value="14" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn
                                Width="150"
                                Binding="{Binding Name}"
                                Header="Name">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#000000" />
                                        <Setter Property="FontSize" Value="14" />
                                        <Setter Property="FontWeight" Value="SemiBold" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding Description}"
                                Header="Description">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#000000" />
                                        <Setter Property="FontSize" Value="14" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>

                <!--  Role Editor  -->
                <GroupBox
                    Grid.Row="3"
                    Margin="0,10,0,10"
                    Header="Add / Edit Role">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--  Role ID  -->
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Text="Role ID:" />
                        <TextBox
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="0,5"
                            Background="#f0f0f0"
                            IsReadOnly="True"
                            Text="{Binding EditRoleId, UpdateSourceTrigger=PropertyChanged}" />

                        <!--  Role Name  -->
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Text="Role Name:" />
                        <TextBox
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="0,5"
                            Text="{Binding EditRoleName, UpdateSourceTrigger=PropertyChanged}" />

                        <!--  Role Description  -->
                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="0"
                            VerticalAlignment="Top"
                            Text="Description:" />
                        <TextBox
                            Grid.Row="2"
                            Grid.Column="1"
                            Height="60"
                            Margin="0,5"
                            AcceptsReturn="True"
                            Text="{Binding EditRoleDescription, UpdateSourceTrigger=PropertyChanged}"
                            TextWrapping="Wrap"
                            VerticalScrollBarVisibility="Auto" />

                        <!--  Action Buttons  -->
                        <StackPanel
                            Grid.Row="3"
                            Grid.Column="1"
                            Margin="0,10,0,0"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal">
                            <Button
                                Command="{Binding AddRoleCommand}"
                                Content="Add New"
                                Style="{StaticResource mainButtonPrimary}" />
                            <Button
                                Margin="10,0,0,0"
                                Command="{Binding UpdateRoleCommand}"
                                Content="Update Selected"
                                Style="{StaticResource mainButton}" />
                            <Button
                                Margin="10,0,0,0"
                                Command="{Binding DeleteRoleCommand}"
                                Content="Delete Selected"
                                Style="{StaticResource mainButton}" />
                            <Button
                                Margin="10,0,0,0"
                                Command="{Binding ClearFormCommand}"
                                Content="Clear"
                                Style="{StaticResource mainButton}" />
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!--  Status Message  -->
                <Border
                    Grid.Row="4"
                    Padding="10"
                    Background="#f0f0f0"
                    BorderBrush="#cccccc"
                    BorderThickness="1"
                    CornerRadius="5">
                    <StackPanel Orientation="Horizontal">
                        <icon:PackIconMaterial
                            Width="16"
                            Height="16"
                            VerticalAlignment="Center"
                            Foreground="#5a5a5a"
                            Kind="InformationOutline" />
                        <TextBlock
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            Text="{Binding StatusMessage}" />
                        <TextBlock
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            Text="(Loading...)"
                            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}" />
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>
    </Border>
</UserControl>
